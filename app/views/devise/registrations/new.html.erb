<% provide(:title, "SIGN UP") %>
<body background="<%= asset_path('hello.jpg') %>">

<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel"  >

        <div class="panel-heading"><h3>SIGN UP</h3></div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
 <div class="panel-body">

  <div class="form-group">
  
    <%= f.text_field :name, class: 'form-control',autofocus: true, label: false, placeholder: 'Name' %>
  </div>

  <div class="form-group">
    
    <%= f.email_field :email, class: 'form-control',autofocus: true, label: false, placeholder: 'Email' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control',autofocus: true, label: false, placeholder: 'Password' %>
    <% if @validatable %>
      <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control',autofocus: true, label: false, placeholder: 'Confirm Password' %>
  </div>

  <%= f.submit "Sign up", class: 'btn-lg btn-info btn-block' %>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>

</div>